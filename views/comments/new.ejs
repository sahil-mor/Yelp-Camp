<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center" >MAKE A NEW COMMENT FOR <em> <strong> <%= campground.name %> </strong> </em> </h1>
    <div style="width: 30%;margin:30px auto">
        <form method="POST" action="/campgrounds/<%= campground._id %>/comments"> 
            <div class="form-group">
                <input name="text" class="form-control" type="text" placeholder="ADD A NEW COMMENT" required>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-default btn-block"  name="id" value=<%= campground._id %> >  SUBMIT</button>
            </div>
            
        </form>  
        <a href="/campgrounds">SEE CAMPGROUNDS</a>
    </div>  
        
</div>

<% include ../partials/footer %>
