<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center" >EDIT COMMENT ON  <strong><em><%=campground['name']%></em></strong> Campground</h1>
    <div style="width: 30%;margin:30px auto">
        <form action="/campgrounds/<%=campground['id']%>/comments/edit/<%=comment['id']%>?_method=PUT" method="POST">
            <div class="form-group">
                    <input class="form-control" type="text" placeholder="NAME" value="<%=comment['text']%>" name="text">
            </div>
            
            <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-default btn-block" type="submit">SUBMIT</button>
            </div>
            
        </form>  
    </div>  
        
</div>
<% include ../partials/footer %>