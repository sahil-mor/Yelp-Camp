<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center" >EDIT <strong><em><%=campground['name']%></em></strong> CAMPGROUND</h1>
    <div style="width: 30%;margin:30px auto">
        <form action="/campgrounds/edit/<%=campground['id']%>/By/<%=authorId%>?_method=PUT" method="POST">
            <div class="form-group">
                    <input class="form-control" type="text" placeholder="NAME" value="<%=campground['name']%>" name="name">
            </div>
            
            <div class="form-group">
                    <input class="form-control" type="text" placeholder="IMAGE" value="<%=campground['image']%>" name="image">
            </div>

            <div class="form-group">
                <input class="form-control" type="text" placeholder="DESCRIPTION" value="<%=campground['description']%>" name="description">
        </div>
            
            <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-default btn-block" type="submit">SUBMIT</button>
            </div>
            
        </form>  
        <a href="/campgrounds">SEE CAMPGROUNDS</a>
    </div>  
        
</div>
<% include ../partials/footer %>